######################################################################################################################
############################################ Commands of this file ###################################################
######################################################################################################################
.SUFFIXES: .f90

include ../make.sys

QMCAll = CPMCReadPara.o CPMCInitiate.o CPMCSimulate.o CPMCDataProc.o CPMCFinalize.o

default: all

all: cpmod build-all

cpmod:
	cp ../Module/*.mod .

build-all: $(QMCAll)

.f90.o:
	$(F90) $(FFLAGS) $*.f90

clean:
	rm -f *.mod
	rm -f *.o

clean-dat:
	rm -f *.dat
	rm -f *.bin.*
	rm -f *.out

clean-all: clean clean-dat
