######################################################################################################################
############################################ Commands of this file ###################################################
######################################################################################################################
.SUFFIXES: .f90

include ../make.sys

default: all

SubRot = MatrixCmpr.o MatrixDetm.o MatrixDiag.o MatrixMult.o MatrxInvLU.o MatrxInvQR.o UDVdcmpQRP.o UDVdcmpSVD.o \
         Quick_Sort.o MatInvsQMC.o SlvLnEqSet.o

all: build-sub

build-sub: $(SubRot)

.f90.o:
	$(F90) $(FFLAGS) $*.f90

clean:
	rm -f *.mod
	rm -f *.o

clean-dat:
	rm -f *.dat
	rm -f *.bin.*
	rm -f *.out

clean-all: clean clean-dat
